%%%% 論文種別
\newcommand{\doctype}[1]{
	\def\doctypestr{#1}
	\def\bachelorsthesis{1}
	\def\mastersthesis{2}
	\def\doctorsthesis{3}
	\def\researchreport{4}
	\def\jdoctype{\ifcase\doctypestr\or{卒業論文}\or{修士論文}\or{博士論文}\or{課題研究報告}\fi}
	\def\edoctype{\ifcase\doctypestr\or{Bachelor's Thesis}\or{Master's Thesis}\or{Doctor's Thesis}\or{Research Report}\fi}
%	\def\edoctypeacronym{\ifcase\doctypestr\or{BT}\or{MT}\or{DT}\or{RR}\fi}
%
%% 所属の定義
%% 論文種別によって所属を決定する
	\ifcase\doctypestr
		\or\department{\college}
		\or\department{\graduate}
		\or\department{\graduate}
		\or\department{\graduate}
	\fi
}
%%%% 論文種別を定義し忘れた場合のエラーメッセージ
\def\jdoctype{\tt error.~$\backslash$doctypeを定義して下さい．}
